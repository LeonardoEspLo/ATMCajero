<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <title>Banco</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="/resources/css/style.css">
    <script src="mysql.js"></script>
</head>

<body>
    <div id="main">
        <header id="header">
            <h3 class="header__item " id="header__tittle">
                <span id="user-container">
                    <img id="user__img" src="/resources/images/user.png" alt="">
                    <h5 id="user__txt" class="font-white"><%= name %></h5>
                </span>
                Banco
            </h3>
        </header>

        <div class="" id="container">
            <section class="section-retiro">
                <h4 class="retiro-tittle">Otra cantidad</h4>
                    <form class="retiro-container" action="/retirando" method="POST">
                       <input type="text" name="retirado">
                        <button class="btn-impress btn btn-dark btn-outline-white btn-lg px-5" type="submit">Retirar</button>
                    </form>
            </section>
            <div class="btn-left">
               <form action="/retirando" method="POST">
             <button class="btn-back btn btn-dark btn-outline-white btn-lg px-5" type="submit" name="retirado" value="50">$50</button>
                </form>
                <form action="/retirando" method="POST">
                <button class="btn-impress btn btn-light btn-outline-white btn-lg px-5" type="submit" name="retirado" value="100">$100</button>
                </form>
                <form action="/retirando" method="POST">
                <button class="btn-action btn btn-primary btn-outline-white btn-lg px-5" type="submit" name="retirado" value="200">$200</button>
                </form>
             </div>
            <div class="btn-right">
               <form action="/retirando" method="POST">
                <button class="btn-back btn btn-dark btn-outline-white btn-lg px-5" type="submit" name="retirado" value="500">$500</button>
                </form>
                <form action="/retirando" method="POST"> 
                 <button class="btn-impress btn btn-light btn-outline-white btn-lg px-5" type="submit" name="retirado" value="1000">$1000</button>
                </form>
                <a class="a-back" href="/"><button class="btn-back btn btn-primary btn-outline-white btn-lg px-5" type="submit">Regresar</button></a>
            </div>

        </div>


    </div>
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <% if(typeof alert != "undefined") { %>
        <script>
            Swal.fire({
                title: '<%= alertTitle %>',
                text: '<%= alertMessage %>',
                icon: '<%= alertIcon %>',
                showConfirmButton: <%= showConfirmButton %>,
                timer: <%= timer %>
            }).then(()=>{
                window.location='/<%= ruta %>'
            })
        </script>
        <% } %>
    <script src="js/bootstrap.min.js"></script>
</body></html>